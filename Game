function instructScreen(){
    background("green");
    text("How to play");
    
}

function gameScreen(){
    background("Blue");
   player= new Sprite(10,10,50,'k');
   platform
   platform= new Sprite(100,100,100,'k');
    
   document.addEventListener("keydown", function(event) {
 if (event.code === 'ArrowLeft') {
rectangle.vel.x = -5;
 }
else if (event.code === 'ArrowRight')
rectangle.vel.x = 5;
});

document.addEventListener("keyup", function(event) {
if (event.code === 'ArrowLeft') {
   rectangle.vel.x = 0;
 }

else if (event.code === 'ArrowRight')
rectangle.vel.x = 0;
});

document.addEventListener("keydown", function(event) {
 if (event.code === 'ArrowUp') {
rectangle.vel.y = -5;
 }
else if (event.code === 'ArrowDown')
rectangle.vel.y = 5;
});

document.addEventListener("keyup", function(event) {
if (event.code === 'ArrowUp') {
   rectangle.vel.y = 0;
 }

else if (event.code === 'ArrowDown')
rectangle.vel.y = 0;
});
}

