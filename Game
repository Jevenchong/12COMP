}

function startScreen(){
    background("#76F1E8");
    textSize(32);
    fill(255);
    stroke(0);
    strokeWeight(4);
    text("Welcome Plat Runner", 600, 250);
    textSize(24);
    text("Press any key to start", 635, 350);
    textSize(30);
    strokeWeight(5);
    text("Instructions",50 , 700);
       
   }
    
}



function mousePressed(){
    if(instructionText==True){
        screenSelector="instruction";
    }
}

